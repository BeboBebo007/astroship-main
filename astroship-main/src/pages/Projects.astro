---
import Container from "@/components/container.astro";
import Layout from "@/layouts/Layout.astro";
import Cta from "@/components/cta.astro";

const projects = [
  {
    title: "Dubai Club Platform",
    description: "An interactive social platform designed to connect individuals in Dubai through unique digital experiences.",
    link: "https://dubaiclub.shop/",
    icon: "/icons/removebg-dubai.png",
    isLive: true,
  },
  {
    title: "Project Tawajoh",
    description: "Tawajuh is a digital project featuring modern, advanced features and innovative concepts. It aims to offer a seamless user experience through cutting-edge technology.",
    link: "#",
    icon: "/icons/Tawajoh-removebg.png",
    isLive: false,
  },
  {
    title: "Gay Platform",
    description: "An upcoming project aimed at enhancing community engagement through technology. Get ready!",
    link: "https://gayplatform.de/",
    icon: "/icons/gay-plat.png",
    isLive: true,
  },
];
---

<Layout title="Our Projects">
  <Container>
    <!-- Hero Section -->
    <section class="relative py-20 text-center bg-gradient-to-r from-gray-100 to-gray-200">
      <div class="absolute inset-0 bg-[url('/path-to-dubai-skyline.jpg')] bg-cover bg-center opacity-10"></div>
      <div class="relative z-10">
        <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">
          Our Projects: Shaping the Future of Digital Connection
        </h1>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          At Ormann Tech, we deliver innovative digital solutions to enhance social interaction and meet the needs of our dynamic community.
        </p>
        <a
          href="#projects"
          class="mt-6 inline-block px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors"
        >
          Discover Now
        </a>
      </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="py-16">
      <h2 class="text-3xl font-bold text-gray-800 text-center mb-12">
        Featured Projects
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map((project) => (
          <div class="bg-white shadow-lg rounded-lg overflow-hidden transform hover:scale-105 transition-transform duration-300">
            <div class="h-48 bg-gradient-to-br from-gray-300 to-gray-500 flex items-center justify-center relative">
              {project.icon ? (
                <img
                  src={project.icon}
                  alt={`${project.title} Icon`}
                  class="w-24 h-24 rounded-full object-contain border-4 border-white shadow-md"
                />
              ) : (
                <span class="text-white text-2xl font-semibold opacity-75">Coming Soon</span>
              )}
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-800 mb-2">{project.title}</h3>
              <p class="text-gray-600 mb-4">{project.description}</p>
              <a
                href={project.link}
                class={`inline-block px-4 py-2 font-semibold rounded-lg transition-colors ${
                  project.isLive
                    ? "bg-blue-600 text-white hover:bg-blue-700"
                    : "bg-gray-400 text-white cursor-not-allowed"
                }`}
              >
                {project.isLive ? "Go to Project" : "Coming Soon"}
              </a>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Call to Action Section -->
    <section class="py-16 text-center bg-gray-50">
      <h2 class="text-3xl font-bold text-gray-800 mb-4">
        Join Our Digital Community
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto mb-6">
        Contact us to learn more about our projects, or join the Dubai Club Platform today!
      </p>
      <a
        href="/contact"
        class="inline-block px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors"
      >
        Contact Us
      </a>
    </section>

    <Cta />
  </Container>
</Layout>
