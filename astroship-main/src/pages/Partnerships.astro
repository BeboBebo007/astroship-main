---
import Container from "@/components/container.astro";
import Cta from "@/components/cta.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Partnerships">
  <Container>
    <section class="py-12 text-center">
      <h1 class="text-4xl font-bold text-gray-800 mb-4">Our Partnerships</h1>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        We collaborate with leading companies and organizations to drive innovation
        and create impactful solutions. Explore our trusted partners below.
      </p>
    </section>

    <section class="py-12">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-white shadow-lg rounded-lg p-6 text-center">
          <h3 class="text-xl font-semibold text-gray-800 mb-2">Partner 1</h3>
          <p class="text-gray-600">
            A leading tech company specializing in innovative solutions.
          </p>
          <a href="#" class="text-blue-500 hover:underline mt-4 inline-block">
            Learn More
          </a>
        </div>
        <div class="bg-white shadow-lg rounded-lg p-6 text-center">
          <h3 class="text-xl font-semibold text-gray-800 mb-2">Partner 2</h3>
          <p class="text-gray-600">
            A global organization focused on sustainable development.
          </p>
          <a href="#" class="text-blue-500 hover:underline mt-4 inline-block">
            Learn More
          </a>
        </div>
        <div class="bg-white shadow-lg rounded-lg p-6 text-center">
          <h3 class="text-xl font-semibold text-gray-800 mb-2">Partner 3</h3>
          <p class="text-gray-600">
            An industry leader in digital transformation and AI.
          </p>
          <a href="#" class="text-blue-500 hover:underline mt-4 inline-block">
            Learn More
          </a>
        </div>
      </div>
    </section>

    <Cta />
  </Container>
</Layout>
